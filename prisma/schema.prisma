// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

model User {
  userID          String @id
  roleID          String @unique
  email           String
  passwordHash    String
  isActive        String
  userRoleGlobal  String
  name            String
  createdAt       String
  updatedAt       String
  
  // Nested Relation
  role           UserRole @relation(fields: [roleID], references: [roleID])
}

model UserRole {
  roleID          String @id
  name            String
  desc            String
  isActive        String @default("TRUE")
  createdAt       String
  updatedAt       String

  // Nested Relation
  user            User?
}
